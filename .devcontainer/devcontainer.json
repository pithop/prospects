{
    "name": "ProspectHub - Scraper Environment",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {},
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "postCreateCommand": "npm install && pip install -r requirements.txt && bash setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "dbaeumer.vscode-eslint"
            ]
        }
    },
    "forwardPorts": [
        3000
    ]
}